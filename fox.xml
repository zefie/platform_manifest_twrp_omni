<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <!-- OrangeFox Recovery Manifest -->
    <!-- Pie | 2018-2019 | R10.0 -->

    <remote name="TeamWin"
            fetch="https://github.com/TeamWin"
            review="https://gerrit.twrp.me" />
    
    <remote name="fox"
            fetch="https://gitlab.com/OrangeFox/"
            revision="refs/tags/R10.0" />

<!-- Remove unused projects -->
    <remove-project name="platform/bootable/recovery"/>
    <remove-project name="android_build"/>
    <!--remove-project name="android_external_f2fs-tools"/-->
    <remove-project name="android"/>  

<!-- Add forked projects -->
    <project name="Recovery" path="bootable/recovery" remote="fox" revision="master" />
    <project name="Vendor" path="vendor/recovery" remote="fox" revision="master" />
    <project name="Build" path="build/make" remote="fox" revision="fox_9.0" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
    </project>

    <!--project name="f2fs-tools" path="external/f2fs-tools" remote="fox" /-->
    <project path="external/busybox" name="android_external_busybox" remote="fox" revision="android-9.0" />
    <project path="vendor/qcom/opensource/commonsys" name="android_vendor_qcom_opensource_commonsys" remote="fox" revision="android-9.0" />
    

<!-- Include external Magisk repo for repack binaries -->
    <!--project path="external/magisk-prebuilt" name="external_magisk-prebuilt" remote="TeamWin" revision="master" /-->
</manifest>

